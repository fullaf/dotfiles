set $mode_launcher LAUNCH: [C]HROME [F]IREFOX [S]UBL P[Y]CHARM GIT[K]RAKEN S[P]OTIFY [T]ELEGRAM S[L]ACK [A]RANDR
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym c exec google-chrome
    bindsym f exec firefox
    bindsym k exec gitkraken
    bindsym p exec spotify
    bindsym s exec subl
    bindsym t exec telegram
    bindsym y exec pycharm-professional
    bindsym l exec slack
    bindsym a exec arandr

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_system SYS: [L]OCK, [^L]OGOUT, [S]USPEND, [H]IBERNATE, [^R]EBOOT, [^S]HUTDOWN [^P]RIME
mode "$mode_system" {
    bindsym l exec --no-startup-id $HOME/dotfiles/bin/i3exit lock, mode "default"
    bindsym Control+l exec --no-startup-id $HOME/dotfiles/bin/i3exit logout, mode "default"
    bindsym s exec --no-startup-id $HOME/dotfiles/bin/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id $HOME/dotfiles/bin/i3exit hibernate, mode "default"
    bindsym Control+r exec --no-startup-id $HOME/dotfiles/bin/i3exit reboot, mode "default"
    bindsym Control+s exec --no-startup-id $HOME/dotfiles/bin/i3exit shutdown, mode "default"
    bindsym Control+p exec --no-startup-id sudo $HOME/dotfiles/bin/i3exit prime, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"

bindsym $mod+t exec --no-startup-id notify-send "`prime-select query`"

