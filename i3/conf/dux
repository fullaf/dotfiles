exec hsetroot -solid "#3c1151"
exec feh --randomize --bg-fill $HOME/dotfiles/wallpapers/*

bindsym $mod+c exec firefox

# Mouse mapping (MX Master)
bindsym Control+Mod1+Tab --whole-window workspace back_and_forth

# Setup compose key
exec setxkbmap -option "compose:Menu" && xmodmap -e "keysym Menu = Multi_key"

# Assign workspaces to screns
workspace $w1 output DP-4.8
workspace $w2 output DP-4.8
workspace $w3 output DP-4.8
workspace $w4 output DP-4.8
workspace $w5 output DP-4.8
workspace $w6 output DVI-D-0
workspace $w7 output DVI-D-0
workspace $w8 output DVI-D-0
workspace $w9 output DVI-D-0
workspace $w0 output DVI-D-0

# Assign apps to workspaces
assign [class="jetbrains-pycharm"] $w1
