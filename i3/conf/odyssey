## i3 config for WeGift laptop, thinkpad t470p

exec feh --randomize --bg-fill $HOME/dotfiles/wallpapers/1440p/*

bindsym $mod+c exec GTK2_RC_FILES=/usr/share/themes/Adwaita/gtk-2.0/gtkrc GTK_THEME=Adwaita:light firefox

exec synclient TapButton1=0
exec synclient TapButton2=0
exec synclient VertScrollDelta=-114
exec synclient HorizScrollDelta=-114

# Volume
bindsym $mod+Prior exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Next exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness
bindsym XF86AudioMicMute exec amixer set Capture toggle

# Docking & undocking
bindsym $mod+F1 exec $HOME/dotfiles/bin/odyssey-dock.sh
bindsym $mod+F2 exec $HOME/dotfiles/bin/odyssey-undock.sh

# Mouse mapping (MX Master)
bindsym Control+Mod1+Tab --whole-window workspace back_and_forth

workspace $w1 output DP-1
workspace $w2 output DP-1
workspace $w3 output DP-1
workspace $w4 output DP-1
workspace $w5 output DP-1
workspace $w6 output HDMI-2
workspace $w7 output HDMI-2
workspace $w8 output HDMI-2
workspace $w9 output HDMI-2
workspace $w0 output HDMI-2
workspace $w@ output eDP-1

workspace $w11 output HDMI-2
workspace $w12 output HDMI-2
workspace $w13 output HDMI-2
workspace $w14 output HDMI-2
workspace $w15 output HDMI-2
workspace $w16 output DP-1
workspace $w17 output DP-1
workspace $w18 output DP-1
workspace $w19 output DP-1
workspace $w20 output DP-1

# Background
exec hsetroot -solid '#260b44'

# Key remapping
exec puttl-xmodmap.sh
exec setxkbmap -option "compose:Menu" && xmodmap -e "keysym Menu = Multi_key"

assign [class="jetbrains-pycharm"] $w1
assign [class="Slack"] $w@

# Startup apps
exec --no-startup-id dropbox start

