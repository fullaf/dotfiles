## i3 config for WeGift laptop, thinkpad t470p

# Volume
bindsym $mod+Prior exec pactl set-sink-volume 0 +5%
bindsym $mod+Next exec pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

# Brightness
bindsym XF86MonBrightnessUp exec sudo /home/will/bin/brightness.sh +100
bindsym XF86MonBrightnessDown exec sudo /home/will/bin/brightness.sh -100
bindsym XF86AudioMicMute exec amixer set Capture toggle

# Docking & undocking
bindsym $mod+F1 exec puttl-dock.sh
bindsym $mod+F2 exec puttl-apps.sh

workspace $w1 output HDMI-1-2
workspace $w2 output HDMI-1-2
workspace $w3 output HDMI-1-2
workspace $w4 output HDMI-1-2
workspace $w5 output HDMI-1-2
workspace $w6 output HDMI-1-1
workspace $w7 output HDMI-1-1
workspace $w8 output HDMI-1-1
workspace $w9 output HDMI-1-1
workspace $w0 output HDMI-1-1

# Background
exec hsetroot -solid '#260b44'

# Key remapping
exec puttl-xmodmap.sh
exec setxkbmap -option "compose:Menu" && xmodmap -e "keysym Menu = Multi_key"

assign [class="jetbrains-pycharm"] $w1
assign [class="sublime_text"] $w2
assign [class="Slack"] $w10

# Media controls
bindsym $mod+p exec playerctl play-pause
bindsym $mod+bracketleft exec playerctl previous
bindsym $mod+bracketright exec playerctl next
