## i3 config for WeGift laptop, thinkpad t470p

# Volume
bindsym $mod+Prior exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Next exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness
bindsym XF86MonBrightnessUp exec sudo $HOME/dotfiles/bin/brightness.sh +100
bindsym XF86MonBrightnessDown exec sudo $HOME/dotfiles/bin/brightness.sh -100
bindsym XF86AudioMicMute exec amixer set Capture toggle

# Docking & undocking
bindsym $mod+F1 exec $HOME/dotfiles/bin/puttl-dock.sh
bindsym $mod+F2 exec $HOME/dotfiles/bin/puttl-undock.sh
bindsym $mod+F3 exec $HOME/dotfiles/bin/puttl-reset-right.sh

bindsym $mod+F6 exec $HOME/dotfiles/bin/puttl-dock-home.sh

bindsym $mod+F9 exec $HOME/dotfiles/bin/puttl-apps.sh
bindsym $mod+10 exec $HOME/dotfiles/bin/puttl-solarr.sh

# Mouse mapping (MX Master)
bindsym Control+Mod1+Tab --whole-window workspace back_and_forth

workspace $w1 output DP-2
workspace $w2 output DP-2
workspace $w3 output DP-2
workspace $w4 output DP-2
workspace $w5 output DP-2
workspace $w6 output HDMI-1
workspace $w7 output HDMI-1
workspace $w8 output HDMI-1
workspace $w9 output HDMI-1
workspace $w0 output HDMI-1

workspace $w11 output DP-2
workspace $w12 output DP-2
workspace $w13 output DP-2
workspace $w14 output DP-2
workspace $w15 output DP-2
workspace $w16 output HDMI-1
workspace $w17 output HDMI-1
workspace $w18 output HDMI-1
workspace $w19 output HDMI-1
workspace $w20 output HDMI-1

# Background
exec hsetroot -solid '#260b44'

# Key remapping
exec puttl-xmodmap.sh
exec setxkbmap -option "compose:Menu" && xmodmap -e "keysym Menu = Multi_key"

assign [class="jetbrains-pycharm"] $w1
assign [class="Slack"] $w@

# Media controls
bindsym $mod+p exec playerctl play-pause
bindsym $mod+bracketleft exec playerctl previous
bindsym $mod+bracketright exec playerctl next

# Startup apps
exec --no-startup-id dropbox start
